@import "../roboto"

.login-page
  font-family Roboto
  padding 96px 0 192px 0
  font-weight 300
  line-height 1.6

  *
    box-sizing border-box

  input
    font-family Roboto

  header
    width 100%
    position absolute
    top 0
    left 0
    height 64px
    line-height 64px
    color #fff
    text-align center

    background-color #0a242e
    border-bottom 1px solid rgba(0,0,0,.1)
    text-shadow 0 1px 1px rgba(0,0,0,.3)
    box-shadow 0 2px 1px rgba(0,0,0,.1), inset 0 -1px rgba(255,255,255,.15)

    #logo
      font-family Oleo Script
      font-size 36px
      line-height 58px
      text-align center

  .info-box
    display block
    margin-top 16px

    &.deep
      margin 32px 0 16px 0

    .left, .right
      width 42%
      float none
      position relative

      .inner
        background-color #e6e7e8
        height 1px
        width 100px
        top -10px
        padding 0
        position absolute

    .left .inner
      right 0

    .right .inner
      left 0

    .left, .right, .text
      display inline-block
      vertical-align bottom

    .text
      width 16%
      text-align center
      color #32b1e1
      font-size 14px

  .container
    width 660px
    margin 0 auto
    display block

    .w50
      width 299px
      &.right
        margin-left 20px
        float none

    &.small
      width 300px

      .info-box
        .left, .right
          width 30%

        .text
          width 40%

        .inner
          width 20px

  form
    padding 10px 20px
    border 1px solid #d9d9d9
    box-shadow 0 0 2px rgba(0, 0, 0, 0.1)
    margin-top 32px
    position relative

    input, label
      width 100%
      display block

    label
      text-align left
      color #888
      font-size 14px
      font-weight 400
      margin 0 -16px 8px 16px

    input
      border 1px solid #d1d1d1
      border-radius 4px
      padding 8px
      margin-bottom 16px

  #main-button
    border none
    background transparent
    font-size 24px
    position absolute
    right 0
    bottom -64px

    #main-icon
      width 20px
      height 25px

      margin-top 2px
      float right
      margin-left 16px

      background-size 20px 25px
      background-image url("/img/right_arrow.png")

    &:hover
      cursor hand
      cursor pointer

      #main-icon
        background-image url("/img/right_arrow_filled.png")

  #subtitle, #description, #teaser
    display block
    text-align center

  #subtitle
    font-size 14px
    color #aaa

  #description
    font-size 18px
    color #aaa

  #teaser
    margin -12px 0 -6px 0
    font-size 48px
    color #444

  .error, .info
    margin-top 16px
    font-size 24px
    width 100%
    display inline-block

  #bottom-action
    position relative
    top 32px
    bottom 32px
    display inline-block
    width 100%
    text-align center

    > *
      color #444
      font-size 28px
      display block
