.sidebar .sb-seco-appearance
  width 230px

  a
    color #595959

  .apa-top, .apa-tabs, .apa-mode-color, .apa-mode-texture
    padding 0

  .apa-top
    height 48px
    border none
    box-shadow none

    > *, .apa-top-switch li
      display inline-block
      vertical-align top

    .apa-top-sample
      height 48px
      width 48px
      position absolute
      right 0
      top 0
      background-color #33b5e5
      background-size cover !important // Will get overwritten if not !important

    &.texture
      height 64px

      .apa-top-sample
        height 64px
        width 96px

    .apa-top-switch
      margin 16px 0 0 12px
      font-size 11px

      li
        margin-left 4px

        &:first-child
          margin-left 0

      .onoffswitch
        margin-top 5px

  .apa-tabs
    position relative
    box-shadow 0 1px 0 0 rgba(255,255,255,.3)
    border-bottom 1px solid #b9b9b9
    margin-top 8px

    > *, ul > *
      display inline-block
      vertical-align top

    .sb-control
      position absolute
      right 0
      top 2px
      right 8px

      i
        margin-right 0

    ul a
      padding 4px 8px
      float left

      border 1px solid #b9b9b9
      border-left none
      border-bottom none

      &.active
        background-color #b9b9b9
        color white

      &:first-child
        border-left none

    .sb-control input
      width 50px !important
      padding-right 4px

  .apa-controls
    padding 12px 8px

  .apa-sliders li
    display block

    width 100%
    padding 0
    margin-bottom 8px

    > *
      display inline-block
      vertical-align top

    label
      margin-right 2%
      width 5%

    input[type=range]
      width 60%
      margin-right 3%

    input[type=number]
      width 25%

  .apa-mode-texture
    font-family Tahoma, Arial
    display none

    .apa-texture-button
      display block
      height 24px
      margin 8px

      button
        float right

    .apa-texture-label
      font-weight bold
      padding-left 16px
      font-size 11px

    .apa-texture-tiling
      padding 0 8px 16px 16px
      font-size 11px

      li
        display inline-block
        vertical-align top
        margin-right 24px

        label
          margin-left 4px
