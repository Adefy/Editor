*
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

body
  padding 0
  margin 0
  border none
  overflow hidden

  color #222
  font-family "Roboto", Tahoma, Arial
  font-size 12px
  -webkit-font-smoothing antialiased

  line-height 1.6

  -webkit-user-select none
  user-select none

.cf:after
  clear both
  content "."
  display block
  font-size 0
  height 0px
  line-height 0
  visibility hidden

.cf
  zoom 1

hr
  border none
  margin 0 !important
  padding 0 !important
  border-top 1px solid rgba(0,0,0,.15)
  border-bottom 1px solid rgba(255,255,255,.1)

a
  color hsl(196, 77%, 55%)
  text-decoration none

  &:hover
    color #DDD

button, input[type="button"], select
  display inline-block
  vertical-align baseline
  background white
  padding 2px 8px
  border-radius 2px
  border 1px solid #b9b9b9
  outline none

  color #222
  line-height 14px
  font-size 11px

  &:hover
    cursor pointer

select
  padding 3px 5px

input[type="text"], input[type="number"]
  font-size 14px
  background-color #212121
  padding 5px
  color #ccc
  border-radius 2px
  box-shadow inset 0 0 3px #000, 0 1px rgba(255,255,255,.1)
  border none
  outline none

  &:focus
    box-shadow inset 0 1px 0px rgba(255,255,255, .05), 0 0 0 1px #0099cc

