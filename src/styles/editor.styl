.tcenter
  text-align center

.button
  display: inline-block
  border-radius: 5px
  border: 1px solid transparent
  color: #666

  text-align: center
  vertical-align: baseline

  &:hover
    cursor pointer
    border-color: rgba(0,0,0,.2)
    box-shadow: inset 0 0 1px rgba(255,255,255,.2)
    color: #999

  &.active, &:hover.active, &:active
    //border-color: transparent
    box-shadow: inset 0 0 1px rgba(0,0,0,.1)
    background: linear-gradient(bottom, #343434, #272727)

  &.active, &:hover.active
    color: hsl(196, 47%, 55%)

.button.toggle
  display inline-block
  width 24px
  height 24px
  margin-right 8px
  text-align center
  float right
  color #999

  transition $time_short color

  &:hover
    color $lblue
