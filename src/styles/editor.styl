*
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

body
  padding 0px
  margin 0px
  border none
  overflow hidden
  background-color #1a1a1a

  //font-family Roboto, Tahoma, Arial
  //font-family Source Sans Pro, Roboto, Tahoma, Arial
  font-family Roboto, Tahoma, Arial

#main
  position relative

.button:hover
  cursor hand
  cursor pointer

#editor
  border none
  padding 0
  margin 0

  color #333

  //font-weight 300
  //text-rendering optimizeLegibility

  line-height 1.6

  -webkit-user-select none
  user-select none

  .cf:after
    clear both
    content "."
    display block
    font-size 0
    height 0px
    line-height 0
    visibility hidden

  .cf
    zoom 1

  hr
    border none
    margin 0 !important
    padding 0 !important
    border-top 1px solid rgba(0,0,0,.15)
    border-bottom 1px solid rgba(255,255,255,.1)

  a
    color hsl(196, 77%, 55%)
    text-decoration none

    &:hover
      color #DDD

  button, input[type="button"], select
    display inline-block
    vertical-align baseline
    background linear-gradient(top, #292929, #222)
    padding 5px 9px
    border-radius 5px
    border 1px solid #111
    box-shadow inset 0 1px 0px rgba(255,255,255, .05)
    outline none

    color #DDD
    font-weight 600
    line-height 1
    text-shadow 0 1px rgba(0,0,0,.1)

    &:focus
      box-shadow inset 0 1px 0px rgba(255,255,255, .05), 0 0 0 1px #0099cc

    &:active
      background #222

  select
    padding 3px 5px

  input[type="text"], input[type="number"]
    font-size 14px
    font-family proxima-nova, sans-serif
    background-color #212121
    padding 5px
    color #ccc
    border-radius 2px
    box-shadow inset 0 0 3px #000, 0 1px rgba(255,255,255,.1)
    border none
    outline none

    &:focus
      box-shadow inset 0 1px 0px rgba(255,255,255, .05), 0 0 0 1px #0099cc

