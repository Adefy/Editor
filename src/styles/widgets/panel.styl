.panel
  overflow hidden

  width 100%
  height 100%

  background-color $c_bkg_panel
  border-right 1px solid $c_brd_panel
  box-shadow inset -1px 0 $c_boxshdw_panel

  &.with-footer
    .content
      height calc(100% - (26px + 20px))

    .footer
      height 20px

      padding 0 7px

      line-height $f_lnh_panel_footer
      font-size $f_size_panel_footer

      color $c_panel_footer

      text-shadow 0 1px 1px $c_txtshdw_panel_footer

      background-color $c_bkg_panel_footer
      border-bottom 1px solid $c_brd_panel_footer
      border-top 1px solid $c_brd_panel_footer_hnt
      box-shadow inset 0 1px $c_boxshdw_panel_footer

      i
        cursor pointer
        line-height 20px

        transition $t_short color

        &:hover
          color $c_panel_footer_icon_hl

        &.active
          color $c_panel_footer_icon_act

      i.left
        float left
        margin-right 7px

      i.right
        float right
        margin-left 7px

  .tabs
    background $c_gradient
    box-shadow 0 1px $c_boxshdw_panel_tabs
    border-top 1px solid $c_brd_panel_tabs
    padding 0 4px

  .tab
    display inline-block

    padding 2px 10px

    cursor pointer

    font-size $f_size_panel_tab
    text-align center
    text-shadow 0 1px 2px $c_texshdw_panel_tab
    color $c_panel_tab

    background-color transparent
    border 1px solid transparent
    border-bottom none

    transition $t_short color, $t_short background-color

    &.selected, &:hover
      color $c_panel_tab_act
      background-color $c_bkg_panel_tab
      border 1px solid $c_brd_panel_tab
      border-top 1px solid $c_brd_panel_tab_hnt
      border-bottom none
      box-shadow none

  .content
    position relative
    overflow hidden

    height calc(100% - 26px)
    padding 0

    line-height $f_lnh_panel_content

    div
      margin 0
      padding 0

    h1
      color $c_panel_content
      border-bottom 1px solid $c_brd_panel_content
      box-shadow 0 1px $c_boxshdw_panel_content
      margin .35em -20px .5em

      &:first-of-type
        margin-top 0
        padding-top 5px

      padding 4px 20px 4px

      text-transform uppercase
      font-weight $f_weight_panel_content_h1
      font-size $f_size_panel_content_h1

      i
        margin-right .5em

    dl
      text-shadow 0 1px 2px $c_txtshdw_panel_content
      font-weight $f_weight_panel_content
      font-size $f_size_panel_content
      line-height $f_lnh_panel_content_dl

      &.half, &.third
        display inline-block

        dd
          text-align left

      &.third
        width 33.3333%

      &.half
        width 50%

    dt, dd
      display inline-block
      padding 0
      margin 0

    dt
      width 35%
      color $c_panel_content_dt

      text-align right

    dd
      width 60%
      color $c_panel_content_dd
      text-align center
      cursor ew-resize


  .tab-properties
    padding: 0px 20px
    dl
      display inline-block
    dd
      input
        font-weight inherit
        width 100%
        padding 0px 4px
        margin 0px 2px
        box-shadow none
        background-color rgba(0, 0, 0, 0.1)

  // files panel
  .files
    padding 0 !important
    display block
    height calc(100% - 24px)

    dl
      display block
      width 100%
      height 24px
      overflow hidden
      line-height 1.6
      padding-left 8px
      font-size 14px
      font-weight 600

      //transition $time_short height

      &.expanded
        display block
        height auto
        border-bottom 2px solid rgba(0, 0, 0, 0.1)

      dt, dd
        cursor pointer
        display table-cell
        text-align left
        padding 0
      dt
        width 1%
        margin-right 4px
        color #999
      dd
        width 70%
        color #666
      i
        margin-right 4px
    dl dl
      padding-left 0

  .textures
    padding: 0 !important
    dl
      display: table
      width: 100%
      line-height: 1.6
      padding-left: 8px
      dt, dd
        cursor: pointer
        display: table-cell
        text-align: left
        padding: 0
      dt
        width: 1%
        margin-right: 4px
      i
        margin-right: 4px
    dl dl
      padding-left: 0

    &.thumbs
      .thumb
        display inline-block
        vertical-align top
        width 50%
        padding .5rem .5rem .25rem
        text-align center
        color #fff
        text-shadow 0 1px rgba(0,0,0,.35)
        font-size .75rem
        .img
          max-height 120px
          line-height 120px
          img
            max-width 100%
            max-height 100%
            vertical-align middle
            box-shadow 0 0 10px 5px rgba(0,0,0,.3)

    &.list
      .thumb
        display block
        vertical-align top
        width 100%
        padding .5rem .5rem .25rem
        text-align left
        color #fff
        text-shadow 0 1px rgba(0,0,0,.35)
        font-size 1.25rem

        .img
          display inline-block
          max-width 20%
          min-width 20%
          max-height 32px

          img
            max-width 100%
            max-height 100%
            vertical-align middle
            box-shadow 0 0 10px 5px rgba(0,0,0,.3)

        .name
          display inline-block
          width 70%

    &.thumbs, &.list
      background-color transparent
      border none
      border 1px solid transparent

      .thumb
        cursor pointer
        transition $t_short border-color, $t_short background-color
        &:hover
          background-color $c_bkg_panel_thumb_hl
          border-color $c_brd_panel_thumb_hl


.canvas
  margin-left 310px
  height 100%
  background-color #1a1a1a
