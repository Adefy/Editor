.panel
  width 100%
  height 100%
  background-color #1e1e1e
  border-right 1px solid rgba(0,0,0,0.35)
  box-shadow inset -1px 0 rgba(255,255,255,.05)
  overflow hidden

  &.with-footer
    .content
      height: calc(100% - (26px + 20px))
    .footer
      height: 20px
      line-height: 22px
      color: #666
      padding: 0 7px
      text-shadow: 0 1px 1px rgba(0,0,0,0.58)
      border-bottom: 1px solid rgba(0,0,0,0.3)
      background: -webkit-linear-gradient(top,#343434,#272727)
      background: #2c2c2c
      border-top: 1px solid rgba(0,0,0,0.45)
      box-shadow: inset 0 1px rgba(255,255,255,0.07)
      font-size: .750rem
      i
        cursor: pointer
        line-height: 20px
        &:hover
          color: #fff
        &.active
          color: #33b5e5
      i.left
        float: left
        margin-right 7px
      i.right
        float: right
        margin-left: 7px

  .tabs
    background linear-gradient(bottom, #272727, #313131)
    box-shadow 0 1px rgba(0,0,0,.1)
    border-top 1px solid #313131

  .tab
    padding 2px 10px
    border 1px solid rgba(0,0,0,0.0)
    border-bottom none

    display inline-block
    cursor pointer
    //cursor default

    font-size 13px
    text-align center
    color #999
    text-shadow 0 1px 2px rgba(0,0,0,.35)

    &.selected, &:hover
      background-color #1e1e1e
      background linear-gradient(bottom, #1e1e1e, #232323)
      border 1px solid rgba(0,0,0,.1)
      border-top 1px solid rgba(0,0,0,.05)
      border-bottom none
      box-shadow 0 1px rgba(255,255,255,.02) // negate the .tabs box shadow
      // , inset 0 1px rgba(255,255,255,.05)

  .content
    position: relative
    height: calc(100% - 26px)
    overflow: hidden
    padding: 0

    h1
      color: #ccc
      border-bottom: 1px solid rgba(0,0,0,.35)
      box-shadow: 0 1px rgba(255,255,255,.05)
      margin: .35em -20px .5em
      &:first-of-type
        margin-top: 0
        padding-top: 5px
      padding: 4px 20px 4px

      text-transform: uppercase
      font-weight: 600
      font-size: 14px

      i
        margin-right: .5em

    dl
      text-shadow: 0 1px 2px rgba(0,0,0,.35)
      font-weight: 600
      font-size: 14px
      line-height: 1.2

      &.half, &.third
        display: inline-block
        dd
          text-align: left
      &.third
        width: 33.3333%
      &.half
        width: 50%

    dt, dd
      display: inline-block
      padding: 0
      margin: 0

    dt
      width: 30%
      color: #999

      text-align: right
    dd
      width: 65%
      color: #666
      text-align: center
      cursor: ew-resize


  .tab-properties
    padding: 0px 20px
    dl
      display inline-block
    dd
      input
        font-weight inherit
        width 100%
        padding 0px 8px
        margin 0px 4px
        box-shadow none
        background-color rgba(0, 0, 0, 0.1)

  // files panel
  .files
    padding 0 !important
    display block
    height calc(100% - 24px)

    dl
      display block
      width 100%
      height 24px
      overflow hidden
      line-height 1.6
      padding-left 8px
      font-size 14px
      font-weight 600

      //transition $time_short height

      &.expanded
        display block
        height auto
        border-bottom 2px solid rgba(0, 0, 0, 0.1)

      dt, dd
        cursor pointer
        display table-cell
        text-align left
        padding 0
      dt
        width 1%
        margin-right 4px
        color #999
      dd
        width 70%
        color #666
      i
        margin-right 4px
    dl dl
      padding-left 0

  .textures
    padding: 0 !important
    dl
      display: table
      width: 100%
      line-height: 1.6
      padding-left: 8px
      dt, dd
        cursor: pointer
        display: table-cell
        text-align: left
        padding: 0
      dt
        width: 1%
        margin-right: 4px
      i
        margin-right: 4px
    dl dl
      padding-left: 0

    &.thumbs
      .thumb
        display: inline-block
        vertical-align: top
        width: 50%
        padding: .5rem .5rem .25rem
        text-align: center
        color: #fff
        text-shadow: 0 1px rgba(0,0,0,.35)
        font-size: .75rem
        .img
          max-height: 120px
          line-height: 120px
          img
            max-width: 100%
            max-height: 100%
            vertical-align: middle
            box-shadow: 0 0 10px 5px rgba(0,0,0,.3)

    &.list
      .thumb
        display: block
        vertical-align: top
        width: 100%
        padding: .5rem .5rem .25rem
        text-align: left
        color: #fff
        text-shadow: 0 1px rgba(0,0,0,.35)
        font-size: 1.25rem

        .img
          display: inline-block
          max-width: 20%
          min-width: 20%
          max-height: 32px

          img
            max-width: 100%
            max-height: 100%
            vertical-align: middle
            box-shadow: 0 0 10px 5px rgba(0,0,0,.3)

        .name
          display: inline-block
          width: 70%

    &.thumbs, &.list
      border-radius 5px
      border 1px solid transparent

      .thumb
        &:hover
          border-color: rgba(0,0,0,.2)
          box-shadow: inset 0 0 1px rgba(255,255,255,.2)


.canvas
  margin-left 310px
  height 100%
  background-color #1a1a1a
