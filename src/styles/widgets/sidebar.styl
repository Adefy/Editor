.sidebar, .sidebar > .sb-secondary, .sidebar > .sb-primary
  position relative
  z-index 2

  background-color rgb(240, 240, 240)

.sidebar
  height 100%
  width 250px

  header
    height 32px
    background-color rgba(220, 220, 220, 0.73)
    border-right 1px solid rgba(43,43,43,0.4)

    .sb-title
      text-shadow #fff 0px 1px 0px
      box-shadow -1px 0 0 0 rgba(255,255,255,.8) inset
      color #595959
      line-height 14px
      padding 8px 8px 8px 24px
      height 26px

  input[type=number], input[type=text]
    font-size 11px
    background-color white
    border 1px solid #b2b2b2
    color #222
    padding 1px 1px 2px 0
    border-radius 0
    box-shadow none
    text-align right

  // Primary is the main sidebar
  .sb-primary
    width 250px
    height 100%
    overflow hidden
    padding 30px 0 0 0

    header
      top -30px

  // Secondary sidebars are expansions that open only when needed
  .sb-secondary
    position absolute
    left 250px
    top 0
    width 200px

    .sb-controls-left
      width 70px
      margin-right 4px

    .sb-controls-right
      width 74px
      margin-top 20px

    .sb-control
      margin-bottom 12px

    section
      position initial

  section
    position absolute
    top 32px
    width 100%
    height 100%

    border-top 1px solid #b9b9b9
    border-right 1px solid rgba(43,43,43,0.4)
    border-bottom 1px solid #b9b9b9
    box-shadow 0 1px 0 0 rgba(255,255,255,0.4) inset, -1px 0 0 0 rgba(255,255,255,.9) inset
    background-color rgba(220, 220, 220, 0.9)

    > *
      padding 12px 24px
      border-bottom 1px solid #b9b9b9
      box-shadow 0 1px 0 0 rgba(255, 255, 255, 0.3)

    .sb-controls-left, .sb-controls-right
      width 90px
      display inline-block
      vertical-align top

    .sb-controls-left
      margin-right 18px

    .sb-control
      margin-bottom 4px

      i
        width 12px
        display inline-block
        margin-right 8px

      input[type=text], input[type=number], textarea
        width 67px

    .sb-appearance
      > *
        display inline-block
        vertical-align top

      .sb-ap-sample
        width 64px
        height 64px
        margin-right 16px

        &.color
          background-color #33b5e5

      .sb-ap-dialogue
        margin-top 20px
        text-decoration underline
        color #333

    .sb-opacity
      position relative

      // We have to manually pad since the label & input are abs positioned
      padding-bottom 31px

      > *
        display inline-block
        vertical-align top

      .sb-op-slider, .sb-op-slider input
        width 100%

      .sb-op-label, .sb-op-input
        position absolute
        height 19px

      .sb-op-label
        left 24px

      .sb-op-input
        right 24px
        width 50px

    .sb-dialogues li
      display block

      > *
        display inline-block
        vertical-align top

      input
        margin-right 8px

      a
        text-decoration underline
        color #333

    .sb-apply
      button
        display inline-block
        vertical-align top

      .sb-cancel
        margin-right 12px

      .sb-apply
        width 80px
