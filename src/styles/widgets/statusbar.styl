.statusbar
  z-index $z_statusBar

  padding 0 12px
  height 32px
  line-height 32px

  color #666
  //font-weight: 600
  text-shadow 0 1px 1px rgba(0,0,0,.58)

  border-bottom 1px solid rgba(0,0,0,.1)
  //background linear-gradient(top, #343434, #272727)
  background-color #2c2c2c
  border-top 1px solid rgba(0,0,0,.45)
  box-shadow inset 0 1px rgba(255,255,255,.07)

  .version
    display inline-block
    position absolute
    left 25px

  .save
    display inline-block
    position absolute
    right 25px
    padding 0 7px
    border-left 1px solid rgba(255,255,255,.1)
    border-right 1px solid rgba(255,255,255,.1)
    box-shadow inset 1px 0 rgba(0,0,0,.1), 1px 0 rgba(0,0,0,.1)
    &.in-progress
      color #fff
    &.done
      color #0099cc
    &.error
      color #e03535
