.toolbar
  z-index $Z_amainbar
  font-size 14px
  line-height 24px
  padding 0 16px
  height 28px

  color #ccc

  border-top 1px solid rgba(255,255,255,.1)
  border-bottom 1px solid rgba(0,0,0,.1)
  background linear-gradient(top, #343434, #272727)
  box-shadow inset 0 -1px rgba(0,0,0,.25)

  .button
    margin-left: 2px
    margin-right: 2px
    padding: 4px
    text-align: center

  .right
    float right
