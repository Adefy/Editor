.sidebar .sb-seco-appearance

  a
    color #595959

  .apa-top, .apa-tabs
    padding 0

  .apa-top
    height 64px
    border none
    box-shadow none

    .apa-top-sample
      height 64px
      width 64px
      position absolute
      right 0
      background-color #33b5e5

  .apa-tabs
    position relative
    box-shadow 0 1px 0 0 rgba(255,255,255,.3)
    border-bottom 1px solid #b9b9b9
    margin-top 8px

    > *, ul > *
      display inline-block
      vertical-align top

    .sb-control
      position absolute
      right 0
      top 2px
      right 8px

      i
        margin-right 0

    ul a
      padding 4px 8px
      float left

      border 1px solid #b9b9b9
      border-left none
      border-bottom none

      &.active
        background-color #b9b9b9
        color white

      &:first-child
        border-left none

    .sb-control input
      width 50px !important
      padding-right 4px

  .apa-controls
    padding 12px 8px

  .apa-sliders li
    display block

    width 100%
    padding 0
    margin-bottom 8px

    > *
      display inline-block
      vertical-align top

    label
      margin-right 2%
      width 5%

    input[type=range]
      width 60%
      margin-right 3%

    input[type=number]
      width 25%
