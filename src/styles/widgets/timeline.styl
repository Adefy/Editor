#aeditor
  .timeline
    font-size: 14px
    position: relative
    width: 100%
    //height: 360px
    background: #1e1e1e

    //position: absolute
    left: 0
    right: 0
    bottom: 0

    .content // needed for perfectScrollbar
      overflow: hidden
      position: relative
      height: calc(100% - 60px)

    .cursor
      position: absolute
      height: 100%
      width: 1px
      z-index: 3
      cursor: ew-resize
      background-color: #fff
      border: 1px solid #555

      &:hover
        background-color: #fff
        border-color: #ccc

    .header
      font-size: 16px
      color: #666
      height: 28px
      line-height: 28px
      padding: 0 12px

      font-weight: 600
      text-shadow: 0 1px 1px rgba(0,0,0,.58)

      border-top: 1px solid rgba(255,255,255,.1)
      background: linear-gradient(top, #343434, #272727)
      box-shadow: inset 0 -1px rgba(0,0,0,.35)

      padding-left: calc(12px + 310px)
      > *
        display: inline-block
      .current_time
        margin-right: 15px
      a
        color: inherit
        padding: 0 3px
        font-size: 14px

        &:hover
          color: #aaa

    .timebar
      height: 12px

    .list
      float: left
      height: 100%
      width: 310px
      //padding: 15px
      border-right: 1px solid rgba(0,0,0,.35)
      box-shadow: inset -1px 0 rgba(255,255,255,.05)
      background-color: #232323

      .timebar
        background-color: #232323

    .time
      height: 100%
      margin-left: 310px

      .timebar
        background-color: #171717

    .row
      height: 24px
      line-height: 24px
      position: relative
      &.selected
        background-color: #1a1a1a
        box-shadow: 0 1px rgba(0,0,0,.1)
        text-shadow: 0 1px 2px rgba(0,0,0,.35)
        background: linear-gradient(top, #313131, #272727)
        .title
          color: hsl(196, 47%, 55%) !important
    .actor
      height: 24px
      overflow: hidden
      &.expanded
        height: auto

    .property
      background-color: rgba(255,255,255,.02)

    .list .actor
      color: #999
      cursor: pointer
      .visibility
        display: inline-block
        width: 16px
        height: 16px
        font-size: 10px
        vertical-align: middle
        margin-right: 4px
        line-height: 1
        padding: 2px 0
        background: linear-gradient(top, rgba(0,0,0,.05), rgba(0,0,0,.1))
        border: 1px solid rgba(20,20,20,.25)
        border-top-color: rgba(0,0,0,.15)
        border-bottom-color: rgba(255,255,255,.05)
        text-align: center
      .expand
        display: inline-block
        vertical-align: middle
        margin-right: 5px
      .row
        padding: 0 15px
      .title
        display: inline-block
        vertical-align: middle
        color: #ccc
      .property
        white-space: nowrap
        display: table-row
        color: #666
        font-size: 14px
        .live, .graph, .title, .value
          display: inline-block
          display: table-cell
          vertical-align: middle
        .live, .graph
          width: 1%
          font-size: 10px
          line-height: 1
          text-align: center
          .button
            display: inline-block
            padding: 2px 1px
        .live .button
          margin-left: 35px
        .graph .button
          margin-left: 3px
          margin-right: 5px

        .title
          color: #999
          width: 1%
        .value
          padding-left: 15px
          color: hsl(196, 47%, 55%)
          cursor: ew-resize

    .time
      position: relative

    .time .actor
      .row
        border-bottom: 1px solid rgba(255,255,255,.05)

      .bar
        width: 500px
        height: 100%
        background: #0099cc // rgba(194, 83, 83, 1)
        box-shadow: inset 0 1px rgba(255,255,255,.35), inset 0 -1px rgba(0,0,0,.35), inset 1px 0 rgba(255,255,255,.25), inset -1px 0 rgba(255,255,255,.25)

      .keyframe
        position: absolute
        display: inline-block
        top: 50%
        margin-top: -4px
        width: 8px
        height: 8px
        background: #666
        box-shadow: inset 0 0 1px rgba(255,255,255,.35)
        background: linear-gradient(-45deg, #aaa, #666)
        -webkit-transform: rotate(45deg)