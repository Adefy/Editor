.texture-library
  width 400px
  border none

  header
    position relative
    height 32px
    padding 3px 6px
    border-top-right-radius 4px
    border-top-left-radius 4px

    border-bottom 1px solid #33b5e5
    background #262626
    box-shadow 0 1px 2px rgba(0, 0, 0, 0.3)
    color white

    .tl-upload
      float right

    $triangle_width = 12px

    // Actual triangle
    // Src: http://nicolasgallagher.com/pure-css-speech-bubbles/demo/default.css
    &:after
      content ""
      position absolute
      border-style solid
      display block
      width 0

    &.origin-top:after
      top -1 * $triangle_width
      right $triangle_width
      bottom auto
      left auto
      border-width 0 $triangle_width $triangle_width
      border-color #262626 transparent

    &.origin-left:after
      top 20px
      left -1 * $triangle_width
      bottom auto
      border-width $triangle_width $triangle_width $triangle_width 0
      border-color transparent #33b5e5

    &.origin-right:after
      top 20px
      right -1 * $triangle_width
      bottom auto
      left auto
      border-width $triangle_width 0 $triangle_width $triangle_width
      border-color transparent #33b5e5

  section
    
    border-bottom-left-radius 4px
    border-bottom-right-radius 4px

    border 1px solid #00040a
    border-top none
    background-color #494949
    box-shadow inset 0 -1px 1px rgba(0, 0, 0, 0.1)
    color #fff

    max-height 500px
    overflow scroll

  .tl-list
    padding-top 16px

    .tl-entry
      width 30%
      margin-bottom 16px

      display inline-block
      vertical-align top

      // This sets up the magical 3% 2% 2% 3% padding
      margin-left -3px
      margin-right 2%

      &:first-child
        margin-left 3%

      &:hover
        cursor pointer

      &:nth-child(3n)
        margin-right 3%

      &:nth-child(3n + 1)
        margin-left 3%
      //

      .tl-entry-img
        border-radius 0
        margin-bottom 4px
        padding 2px
        background-color white

        > div
          background-size cover
          width 100%
          height 100px

      span
        display block
        padding-left 4px
        font-size 11px

      .tl-entry-filename
        font-weight 500

      &.no-details
        margin-bottom 16px

        span
          display none
          
