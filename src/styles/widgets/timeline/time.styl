.timeline .time
  position relative
  min-height 100%
  margin-left 310px
  background-color #f3f3f3
  border-top 1px solid #b9b9b9
  overflow hidden

  .time-delimit
    background-color rgb(220, 220, 220)
    width 100%
    height 24px
    display inline-block
    vertical-align top

    .tick
      display inline-block
      vertical-align top
      width 35px
      font-size 11px

      > *
        display block
        width 100%

      .tick-visual
        padding-left 3px
        border-left 1px solid black
        height 8px

  section
    .actor

      &.expanded
        overflow visible

        .row
          position inherit
          overflow visible
          height auto

      .bar
        position absolute
        height 4px
        background #0099cc
        margin-top 10px

        .bar-birth, .bar-death
          width 3px
          height 16px
          margin-top -6px
          position absolute
          background-color #0099cc

        .bar-birth
          left 0

        .bar-death
          right 0

      .property-keyframes
        height 24px
        display inline-block
        vertical-align top
        width 100%
        position relative

      .keyframe
        position absolute
        display inline-block
        top 50%
        margin-top -4px
        margin-left -3px
        width 8px
        height 8px
        background #0099cc
        -webkit-transform rotate(45deg)

        &:hover
          cursor pointer
