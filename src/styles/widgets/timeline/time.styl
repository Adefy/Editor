.timeline .time
  position relative
  min-height 100%
  margin-left 310px
  background-color rgba(220, 220, 220, 0.9)
  border-top 1px solid #b9b9b9

  section
    padding-top 24px

    .actor
      .bar
        position absolute
        height 4px
        background #0099cc
        margin-top 10px

        .bar-birth, .bar-death
          width 3px
          height 16px
          margin-top -6px
          position absolute
          background-color #0099cc

        .bar-birth
          left 0

        .bar-death
          right 0

      .keyframe
        position absolute
        display inline-block
        top 50%
        margin-top -4px
        margin-left -3px
        width 8px
        height 8px
        background #666
        box-shadow inset 0 0 1px rgba(255,255,255,.35)
        background linear-gradient(-45deg, #aaa, #666)
        -webkit-transform rotate(45deg)

        &:hover
          cursor pointer
