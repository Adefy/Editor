*
  box-sizing border-box

body
  overflow hidden

  padding 0
  margin 0
  border none

  font-family 'Roboto', Tahoma, Arial
  font-weight $f_weight
  text-rendering optimizeLegibility

  line-height $f_lnh

  color $c_default

  user-select none

hr
  margin 0 !important
  padding 0 !important

  border none
  border-top 1px solid rgba(0,0,0,.15)
  border-bottom 1px solid rgba(255,255,255,.1)

a
  color $c_a
  text-decoration none

  &:hover
    color $c_a_hl

button, input[type="button"], select
  display inline-block

  vertical-align baseline

  padding 6px 12px

  line-height 1
  text-shadow 0 1px rgba(0,0,0,.1)
  color #ddd

  background linear-gradient(top, #292929, #222)
  border 1px solid #161616
  border-radius 5px
  box-shadow inset 0 1px 0px rgba(255,255,255, .05)

  outline none

  &:focus
    box-shadow inset 0 1px 0px rgba(255,255,255, .05), 0 0 0 1px #0099cc

  &:active
    background-color #222

  &:hover
    cursor pointer

select
  padding 3px 5px

input[type="text"], input[type="number"]
  font-size 14px
  background-color #212121
  padding 5px
  color #ccc
  border-radius 2px
  box-shadow inset 0 0 3px #000, 0 1px rgba(255,255,255,.1)
  border none
  outline none

  &:focus
    box-shadow inset 0 1px 0px rgba(255,255,255, .05), 0 0 0 1px #0099cc