.atimeline
  position fixed
  bottom 0
  left 0
  width 100%
  background-color #ccc
  z-index $Z_atimeline

  // Shared properties
  #at-actors, #at-timeline, #at-animations
    display inline-block
    vertical-align top
    height 100%

  // Toolbar
  #at-toolbar
    height 24px
    width 100%
    background-color #262626
    border-top 2px solid #09c

  #at-toolbar:hover
    cursor hand
    cursor pointer
    cursor s-resize

  // Actor list
  #at-actors
    width 15%
    background-color #f6f6f6

  // Timeline itself
  #at-timeline
    width 70%
    background-color #363636
    position relative

    // Cursor
    #att-cursor
      position absolute
      top 0
      left 100px
      width 1px
      height 100%
      background-color #09c
      z-index $Z_atimline_cursor

    // Actual timeline space
    #att-space

      // Actor row
      .atts-outer
        width 100%
        height 16px
        position relative

        // Actor lifetime
        .attso-inner
          position absolute
          top 0
          left 120px
          width 300px
          height 100%
          background-color red

      // Clicking on a row selects the actor in the workspace
      .atts-outer:hover
        background-color #303030
        cursor hand
        cursor pointer


  // Animation list
  #at-animations
    width 15%
    background-color #f6f6f6