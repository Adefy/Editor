// Top navigation bar, holds the logo and menu items
#aeditor
  .amainbar
    z-index $Z_amainbar
    position relative

    width 100%
    padding-top 2px

    color $col_mainbar_color
    font-size 14px
    text-shadow 0 1px 2px rgba(0,0,0,.2), 0 1px rgba(0,0,0,.2)

    background-color: #2c2c2c
    border-bottom: 1px solid rgba(0,0,0,.15)
    box-shadow: 0 1px rgba(255,255,255,.1)

    a
      transition color 0.15s, background-color 0.15s

    *
      display inline-block
      vertical-align top

    // Decorater, used to be a border on the mainbar, but moved into a seperate
    // element to not mess with the height of it. It turned out to mess with the
    // height anyways, but at this point, not going to move it again
    #ambdecorater
      height 2px
      width 100%
      position absolute
      top 0
      background-color $col_mainbar_decorator_bg
      border-bottom 1px solid $col_divider_bot

    .amainbar-primary
      z-index $Z_amainbar_primary
      position relative
      margin 0
      padding 0

      line-height 1

      li
        display: inline-block

      a
        display inline-block
        padding: 5px 10px
        border-left 1px solid rgba(0,0,0,.0)
        border-right 1px solid rgba(0,0,0,.0)

        &:hover
          background-color #222
          border-left 1px solid rgba(0,0,0,.20)
          border-right 1px solid rgba(0,0,0,.20)

        &:first-child
          margin-left 4px

      //a:hover:not(.open)
      //  background $col_mainbar_link_hover_bg

      //a.open
      //  background-color $col_mainbar_primary_open_bg

    // aka menu
    .amainbar-secondary
      z-index $Z_amainbar_secondary
      position absolute

      background-color rgba(35, 35, 35, .8)
      min-width 96px
      border 1px solid rgba(0,0,0,.15)
      box-shadow 0 2px 3px rgba(0,0,0,.25), inset 0 0 1px rgba(255,255,255,.15)
      display none

      a
        display block
        padding 5px 10px
        color #AAA

        &:hover
          color #DDD
          background-color $col_mainbar_secondary_hover_bg

        //&:last-child
        //  margin-bottom 8px

      hr
        border none
        height 0
        margin 0
        border-top 1px solid rgba(0,0,0,.15)
        border-bottom 1px solid rgba(255,255,255,.05)