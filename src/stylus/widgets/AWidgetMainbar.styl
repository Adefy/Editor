// Top navigation bar, holds the logo and menu items
.amainbar
  background #393939
  background linear-gradient(top, #393939, #303030)

  color #ccc
  text-shadow 0 0 2px #505050

  width 100%
  height 30px
  font-size 13px
  line-height 14px
  padding-top 2px

  position relative
  z-index $Z_amainbar

  *
    display inline-block
    vertical-align top

  // Decorater, used to be a border on the mainbar, but moved into a seperate
  // element to not mess with the height of it. It turned out to mess with the
  // height anyways, but at this point, not going to move it again
  #ambdecorater
    height 2px
    width 100%
    position absolute
    top 0
    background-color #99cc00

  // Logo is always displayed using Oleo Script
  .logo
    font-family "Oleo Script", serif
    font-size 16px

    background #292929
    background linear-gradient(top, #292929, #202020)

    border-right 2px solid #252525
    padding 8px

  .amainbar-primary
    z-index $Z_amainbar_primary
    position relative

    a
      display inline-block
      padding 8px 12px

    a:first-child
      margin-left 16px

    a:hover:not(.open)
      padding 8px 11px
      border-left 1px solid #292929
      border-right 1px solid #292929
      background linear-gradient(top, #484848, #383838)
      text-shadow 0 0 3px #222

    a.open
      padding-bottom 9px
      border-left 1px solid #333
      padding-left 11px
      background-color #505050

    a.open:first-child
      padding-left 11px
      margin-left 16px

  .amainbar-secondary
    position absolute
    top 32px
    box-shadow 0 2px 8px 0 rgba(0, 0, 0, 0.8)
    border 1px solid #333
    display none
    z-index $Z_amainbar_secondary

    a
      width 128px
      padding 7px 32px
      background-color #505050
      display block

      li
        color white
        text-shadow 0 0 4px rgba(0, 0, 0, 0.4)

    a:hover
      background-color #303030

      li
        color #bbee22
