.asidebar
  background-color $col_sidebar_bg
  position absolute
  color $col_sidebar_color

  z-index $Z_asidebar

  > *
    padding 4px 8px

  hr
    background-color $col_sidebar_hr_bg
    padding 0
    border none
    height 1px
    margin 0

  // Sidebar name
  .as-name
    background-color $col_sidebar_name_bg
    display block
    font-size 18px
    margin-bottom 8px
    color $col_sidebar_name_color

  // Group of objects in the sidebar
  .as-objgroup
    border-left 2px solid $col_sidebar_objgroup_border

    // Category name
    .asog-catname
      font-size 16px
      display block
      margin-bottom 4px

    // Object name
    .aso-name
      font-size 14px
      padding 4px 0 4px 16px
      margin 4px 0 4px 16px
      border-left 2px solid $col_sidebar_obj_name_border

    .aso-name:hover
      background-color $col_sidebar_obj_name_hover_bg
      color $col_sidebar_obj_name_hover_color
      cursor hand
      cursor pointer
      margin-left 0
      padding-left 32px

  .ui-draggable-dragging
    background-color $col_sidebar_obj_name_hover_bg
    color $col_sidebar_obj_name_hover_color
    min-width 200px

  // Manipulatable properties widget
  .as-properties

    // A group of controls for a single object property (can be composite)
    .asp-control-group
      margin-bottom 16px
      padding-bottom 4px
      border-bottom 1px solid $col_sidebar_property_group_border

      // Single control, with a label and input field
      .asp-control
        margin-bottom 8px

        label, input
          display inline-block
          vertical-align top

        label
          width 75px
          padding-right 8px
          text-align right

        input
          width 160px
          margin 0
          padding 0 8px
          border none
          border-radius 8px
          outline 0

        input:after, input:focus
          box-shadow 0 0 1px 1px $col_sidebar_property_input_focus_shadow

        input[type="checkbox"]
          width auto

        .aspc-composite-name
          text-align center
          margin-bottom 8px