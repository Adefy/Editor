#aeditor
  .amodal
    opacity 0
    position absolute
    top 200px
    left 0
    width 100%

    z-index $Z_amodal

    .aminner
      width 400px
      margin 0 auto
      display block

      border 1px solid $dblue
      background-color $mgray
      padding 16px
      color $white

      .ambody
        a
          color $lblue !important
        a:hover
          color $dblue !important

        .input_group
          margin 4px 0

          label, input
            display inline-block
            vertical-align top

          label
            width 30%
            text-align right
            margin-right 8px
            padding 4px 0

          input, select
            padding 2px 4px
            border 0
            margin 0

          input
            width 50%

          input.wsmall
            width 50px

          input[disabled="disabled"]
            background-color transparent
            color $white
            padding 4px 0

          input[type="radio"]
            width auto
            margin-top 2px
            margin-left 16px

          input[type="radio"]:first-child
            margin-left 0

          .radio
            padding 4px 0
            display inline-block

      .amtitle
        font-size 24px
        padding-bottom 16px
        display block

      .amfooter
        display block
        margin-top 16px
        height 28px

        .amerror
          color $lred
          width 240px
          float left

        button
          color white
          border 1px solid $dgray
          padding 4px 8px
          margin 0 8px
          font-size 14px

        button:hover
          border 1px solid $dblue

        .amf-dismiss
          background-color $red
          float right

        .amf-submit
          background-color $lblue
          float right