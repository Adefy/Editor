.amodal
  opacity 0
  position absolute
  top 200px
  left 0
  width 100%

  z-index $Z_amodal

  .aminner
    width 400px
    margin 0 auto
    display block

    border 1px solid $dblue
    background-color $mgray
    padding 16px
    color $white

    .amtitle
      font-size 24px
      padding-bottom 16px
      display block

    .amfooter
      display block
      margin-top 16px
      height 28px

      button
        color white
        border 1px solid $dgray
        padding 4px 8px
        margin 0 8px
        font-size 14px

      button:hover
        border 1px solid $dblue

      .amf-dismiss
        background-color $red
        float right