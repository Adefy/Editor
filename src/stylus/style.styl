@import "effeckt/effeckt-offscreen-nav-autoprefixed"
@import "nib"
@import "nib/gradients"

body, html
  padding 0
  margin 0

#aeditor
  font-family Arimo, Tahoma, Arial
  text-rendering optimizeLegibility

  // Generic styles
  a
    color inherit
    text-decoration none

  ul
    list-style none
    margin 0
    padding 0 8px

  // Logo is always displayed using Oleo Script
  .logo
    font-family "Oleo Script", serif
    font-size 16px

    background #292929
    background linear-gradient(top, #292929, #202020)

    border-right 2px solid #252525
    padding 8px

  // Top navigation bar, holds the logo and menu items
  #mainbar
    background #393939
    background linear-gradient(top, #393939, #303030)

    color #ccc
    border-top 2px solid #99cc00
    text-shadow 0 0 2px rgba(50, 50, 50, 1)

    width 100%
    height 30px
    font-size 13px
    line-height 14px

    *
      display inline-block
      vertical-align top

    a
      display inline-block
      padding 8px 3px

    a:first-child
      padding-left 0

  // Contains everything interesting, including workspace and sidebars
  #maincontainer
    background transparent url(./img/pw_pattern.png) repeat
