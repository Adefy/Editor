* {-moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }

.cf:after {
  clear:both;
  content:".";
  display:block;
  font-size:0;
  height:0;
  line-height:0;
  visibility:hidden
}
.cf{zoom:1}

body
  font-family: Source Sans Pro
  color: #333
  background: #232323
  line-height: 1.6
  overflow: hidden

  -webkit-user-select: none
  user-select: none
a
  color: hsl(196, 77%, 55%)
  text-decoration: none
  &:hover
    color: white

button
  display: inline-block
  vertical-align: baseline
  background: -webkit-linear-gradient(top, #292929, #222)
  color: #ddd
  font-weight: 600
  padding: 5px 9px
  border-radius: 5px
  line-height: 1
  border: 1px solid #111
  text-shadow: 0 1px rgba(0,0,0,.1)
  box-shadow: inset 0 1px 0px rgba(255,255,255, .05)

  outline: none
  &:focus
    box-shadow: inset 0 1px 0px rgba(255,255,255, .05), 0 0 0 1px #0099cc
  &:active
    background: #222

input[type="text"]
  font-size: 14px
  font-family: proxima-nova, sans-serif
  background-color: #212121
  padding: 5px
  color: #ccc
  border-radius: 2px
  box-shadow: inset 0 0 3px #000, 0 1px rgba(255,255,255,.1)
  border: none
  outline: none
  &:focus
    box-shadow: inset 0 1px 0px rgba(255,255,255, .05), 0 0 0 1px #0099cc

.button
  border-radius: 5px
  border: 1px solid transparent
  color: #666
  &:hover
    border-color: rgba(0,0,0,.2)
    box-shadow: inset 0 0 1px rgba(255,255,255,.2)
    color: #999
  &.active, &:hover.active
    border-color: transparent
    box-shadow: inset 0 0 1px rgba(0,0,0,.1)
    background: -webkit-linear-gradient(bottom, #343434, #272727)
    color: hsl(196, 47%, 55%)

header
  position: relative
  z-index: 9
  text-shadow: 0 1px 2px rgba(0,0,0,.2), 0 1px rgba(0,0,0,.2)
  .toolbar
    background-color: #2c2c2c
    font-size: 14px
    border-bottom: 1px solid rgba(0,0,0,.15)
    box-shadow: 0 1px rgba(255,255,255,.1)
    position: relative

    li
      display: inline-block
    a
      padding: 5px 10px

  .menu
    position: absolute
    z-index: 99
    background-color: rgba(35, 35, 35,.8)
    min-width: 96px
    border: 1px solid rgba(0,0,0,.15)
    box-shadow: 0 2px 3px rgba(0,0,0,.25), inset 0 0 1px rgba(255,255,255,.15)
    a
      display: block
      color: #666
      &:hover
        background-color: #333
    hr
      border: none
      height: 0
      margin: 0
      border-top: 1px solid rgba(0,0,0,.15)
      border-bottom: 1px solid rgba(255,255,255,.05)

  .menubar
    border-top: 1px solid rgba(255,255,255,.1)
    border-bottom: 1px solid rgba(0,0,0,.1)
    background: -webkit-linear-gradient(top, #343434, #272727)
    box-shadow: inset 0 -1px rgba(0,0,0,.25)
    padding: 5px

    .button
      margin: 2px 7px
      padding: 3px 2px

.sidebar
  float: left
  width: 310px
  height: 100%
  margin-top: -1px

.panel
  width: 100%
  background: #1e1e1e
  border-right: 1px solid rgba(0,0,0,0.35)
  box-shadow: inset -1px 0 rgba(255,255,255,.05)
  height: 50%
  overflow: hidden
  position: relative

  .tabs
    background: -webkit-linear-gradient(bottom, #272727, #313131)
    box-shadow: 0 1px rgba(0,0,0,.1)
    border-top: 1px solid #313131

  .tab
    display: inline-block
    cursor: pointer
    font-size: 13px
    cursor: default
    text-align: center
    color: #999
    padding: 2px 10px
    text-shadow: 0 1px 2px rgba(0,0,0,.35)

  .tab.selected
    background: #1e1e1e
    background: -webkit-linear-gradient(bottom, #1e1e1e, #232323)
    border: 1px solid rgba(0,0,0,.1)
    border-top: 1px solid rgba(0,0,0,.05)
    border-bottom: none;
    box-shadow: 0 1px rgba(255,255,255,.02) // negate the .tabs box shadow
    // , inset 0 1px rgba(255,255,255,.05)

  .content
    position: relative
    height: calc(100% - 28px)
    overflow: hidden
    padding: 0 20px 10px
    
    h1
      color: #ccc
      border-bottom: 1px solid rgba(0,0,0,.35)
      box-shadow: 0 1px rgba(255,255,255,.05)
      margin: .35em -20px .5em
      &:first-of-type
        margin-top: 0
        padding-top: 5px
      padding: 4px 20px 4px

      text-transform: uppercase
      font-weight: 600
      font-size: 14px

      i
        margin-right: .5em

    dl
      text-shadow: 0 1px 2px rgba(0,0,0,.35)
      font-weight: 600
      font-size: 14px
      line-height: 1.2
      &.half, &.third
        display: inline-block
        dd
          text-align: left
      &.third
        width: 33.3333%
      &.half
        width: 50%
    
    dt, dd
      display: inline-block
      padding: 0 6px
      margin: 2px 0
    dt
      width: 30%
      color: #999

      text-align: right
    dd
      width: 70%
      color: #666
      text-align: center
      cursor: ew-resize

// files panel
.panel .files
  padding: 0 !important
  dl
    display: table
    width: 100%
    line-height: 1.6
    padding-left: 8px
    dt, dd
      cursor: pointer
      display: table-cell
      text-align: left
      padding: 0
    dt
      width: 1%
      margin-right: 4px
    i
      margin-right: 4px
  dl dl
    padding-left: 0


.canvas
  margin-left: 310px
  height: 100%
  background-color: #1a1a1a
.timeline
  font-size: 14px
  position: relative
  width: 100%
  height: 360px
  background: #1e1e1e

  position: absolute
  left: 0
  right: 0
  bottom: 0

  .content // needed for perfectScrollbar
    overflow: hidden
    position: relative
    height: calc(100% - 60px)

  .cursor
    position: absolute
    height: 100%
    width: 1px
    z-index: 3
    background-color: white
    cursor: ew-resize

  .header
    font-size: 16px
    color: #666
    height: 28px
    line-height: 28px
    padding: 0 12px

    font-weight: 600
    text-shadow: 0 1px 1px rgba(0,0,0,.58)

    border-top: 1px solid rgba(255,255,255,.1)
    background: -webkit-linear-gradient(top, #343434, #272727)
    box-shadow: inset 0 -1px rgba(0,0,0,.35)

    padding-left: calc(12px + 310px)
    > *
      display: inline-block
    .current_time
      margin-right: 15px
    a
      color: inherit
      padding: 0 3px
      font-size: 14px

      &:hover
        color: #aaa

  .footer
    color: #666
    height: 32px
    line-height: 32px
    padding: 0 12px

    //font-weight: 600
    text-shadow: 0 1px 1px rgba(0,0,0,.58)

    position: absolute
    left: 0
    right: 0
    bottom: 0

    border-bottom: 1px solid rgba(0,0,0,.1)
    background: -webkit-linear-gradient(top, #343434, #272727)
    background: #2c2c2c
    border-top: 1px solid rgba(0,0,0,.45)
    box-shadow: inset 0 1px rgba(255,255,255,.07)

    .save
      position: absolute
      right: 25px
      display: inline-block
      padding: 0 7px
      border-left: 1px solid rgba(255,255,255,.1)
      border-right: 1px solid rgba(255,255,255,.1)
      box-shadow: inset 1px 0 rgba(0,0,0,.1), 1px 0 rgba(0,0,0,.1)
      &.in-progress
        color: #fff
      &.done
        color: #0099cc
      &.error
        color: #e03535

  .list
    float: left
    width: 310px
    //padding: 15px
    border-right: 1px solid rgba(0,0,0,.35)
    box-shadow: inset -1px 0 rgba(255,255,255,.05)
    background-color: #232323
  .time
    margin-left: 310px

  .row
    height: 24px
    line-height: 24px
    position: relative
    &.selected
      background-color: #1a1a1a
      box-shadow: 0 1px rgba(0,0,0,.1)
      text-shadow: 0 1px 2px rgba(0,0,0,.35)
      background: -webkit-linear-gradient(top, #313131, #272727)
      .title
        color: hsl(196, 47%, 55%) !important
  .actor
    height: 24px
    overflow: hidden
    &.expanded
      height: auto

  .property
    background-color: rgba(255,255,255,.02)

  .list .actor
    color: #999
    cursor: pointer
    .visibility
      display: inline-block
      width: 16px
      height: 16px
      font-size: 10px
      vertical-align: middle
      margin-right: 4px
      line-height: 1
      padding: 2px 0
      background: -webkit-linear-gradient(top, rgba(0,0,0,.05), rgba(0,0,0,.1))
      border: 1px solid rgba(20,20,20,.25)
      border-top-color: rgba(0,0,0,.15)
      border-bottom-color: rgba(255,255,255,.05)
      text-align: center
    .expand
      display: inline-block
      vertical-align: middle
      margin-right: 5px
    .row 
      padding: 0 15px
    .title
      display: inline-block
      vertical-align: middle
      color: #ccc
    .property
      white-space: nowrap
      display: table-row
      color: #666
      font-size: 14px
      .live, .graph, .title, .value
        display: inline-block
        display: table-cell
        vertical-align: middle
      .live, .graph
        width: 1%
        font-size: 10px
        line-height: 1
        text-align: center
        .button
          display: inline-block
          padding: 2px 1px
      .live .button
        margin-left: 35px
      .graph .button
        margin-left: 3px
        margin-right: 5px

      .title
        color: #999
        width: 1%
      .value
        padding-left: 15px
        color: hsl(196, 47%, 55%)
        cursor: ew-resize

  .time
    position: relative

  .time .actor
    .row
      border-bottom: 1px solid rgba(255,255,255,.05)

    .bar
      width: 500px
      height: 100%
      background: #0099cc // rgba(194, 83, 83, 1)
      box-shadow: inset 0 1px rgba(255,255,255,.35), inset 0 -1px rgba(0,0,0,.35), inset 1px 0 rgba(255,255,255,.25), inset -1px 0 rgba(255,255,255,.25)

    .keyframe
      position: absolute
      display: inline-block
      top: 50%
      margin-top: -4px
      width: 8px
      height: 8px
      background: #666
      box-shadow: inset 0 0 1px rgba(255,255,255,.35)
      background: -webkit-linear-gradient(-45deg, #aaa, #666)
      -webkit-transform: rotate(45deg)

.dialog
  position: fixed
  top: 50px
  left: 450px
  z-index: 99
  min-width: 510px
  min-height: 360px

  border-radius: 4px
  background-color: #333
  
  color: #666
  font-weight: 600
  text-shadow: 0 1px 1px rgba(0,0,0,0.58)
  box-shadow: inset 0 0 1px rgba(255,255,255,.15), 0 3px 15px rgba(0,0,0,.15)
  border: 1px solid rgba(0,0,0,.6)

  .header
    height: 36px
    line-height: 36px
    padding: 0 12px
    border-radius: 4px 4px 0 0
    background: -webkit-linear-gradient(top, #343434,#292929)
    box-shadow: inset 0 -1px rgba(0,0,0,.35), inset 0 1px rgba(255,255,255,.05)
    border-bottom: 1px solid rgba(255,255,255,.05)
    vertical-align: middle
    color: #ddd
    &:after
      content: ""
      display: table
      clear: both
    .title
      float: left
    .close
      float: right

  .content
    padding: 0 12px 6px